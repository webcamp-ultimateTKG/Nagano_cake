<header class=>
  <div class="px-3 py-2 bg-secondary text-white">
    <div class="container-fluid">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center my-2 my-lg-0 mr-lg-auto text-white text-decoration-none">
          Nagano Cake
        </a>
        <% if customer_signed_in? %>
          <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0">
            <li>ようこそ、<%= current_customer.last_name %>さん！</li>
          </ul>
        <% end %>
        <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0">
          <% if customer_signed_in? %>
          <li><%= link_to "マイページ", my_page_customers_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "商品一覧", products_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "カート", cart_products_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link text-light btn btn-outline-light btn-sm" %></li>
        <% elsif admin_signed_in? %>
          <li><%= link_to "商品一覧", admin_products_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "会員一覧", admin_customers_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "注文履歴一覧", admin_orders_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link text-light btn btn-outline-light" %></li>
        <% else %>
          <li><%= link_to "About", about_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "商品一覧", products_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "新規登録", new_customer_registration_path, class: "nav-link text-light btn btn-outline-light btn-sm mr-2" %></li>
          <li><%= link_to "ログイン", new_customer_session_path, class: "nav-link text-light btn btn-outline-light" %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="px-3 py-2 border-bottom mb-3">
    <div class="container d-flex flex-wrap justify-content-center">
      <form class="col-12 col-lg-6 mb-2 mb-lg-0 me-lg-auto">
        <%= form_with url: search_products_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword , placeholder: "Search", class: "form-control" %>
        <% end %>
      </form>
    </div>
  </div>
  </header>