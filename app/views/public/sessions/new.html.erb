<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="bg-secondary col-4 text-light" >ログイン</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 ml-3 mt-4">
      <h5 class="bg-secondary col-md-6 text-light">会員の方はこちらからログイン</h5>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-md-8 mt-2" >
      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>

      <div class="mt-3">
        <!--メールアドレス-->
        <div class="row form-group flex">
          <%= f.label :email, "メールアドレス", class: "col-md-3 col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class: "form-control col-md-8" %>

        <!--パスワード-->
          <%= f.label :password, "パスワード", class: "col-md-3 col-form-label mt-3" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-8 mt-3" %>

        <!--ログインボタン-->
          <%= f.submit "ログイン", class: "btn btn-primary col-md-3 offset-md-3 mt-5" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 ml-3 mt-5">
      <h5 class="bg-secondary col-md-6 text-light">会員登録がお済みでない方</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 ml-5 mt-3">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>