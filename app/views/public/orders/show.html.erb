<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4><span class="title">注文履歴詳細</span></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 mt-4">
      <h6 class="font-weight-bold">注文情報</h6>
      <table class="table my-table">
        <tbody>
          <tr>
            <th class="table-back">注文日</th>
            <td><%= @order.created_at.to_s(:date_jp) %></td>
          </tr>
          <tr>
            <th class="table-back">配送先</th>
            <td style="width: 500px; line-height:1.3em">
              〒<%= @order.post_code.to_s.insert(3, "-") %></br>
              <%= @order.address.truncate(50) %></br>
              <%= @order.owner %>
            </td>
          </tr>
          <tr>
            <th class="table-back">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-back">ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 mt-4">
      <h6 class="font-weight-bold">請求情報</h6>
      <table class="table my-table">
        <tbody>
          <tr>
            <th class="table-back">商品合計</th>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-back">配送料</th>
            <td><%= @order.shipping_fee.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-back"><strong>ご請求額</strong></th>
            <td><%= @order.charge.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mt-3">
      <h6 class="font-weight-bold">注文内容<h6>
      <table class="table my-table">
        <thead class="table-back">
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order_products.each do |order_product| %>
            <tr>
              <td style="width: 400px"><%= order_product.product.name.truncate(50) %></td>
              <td><%= order_product.tax_in_price.to_i.to_s(:delimited) %></td>
              <td><%= order_product.quantity %></td>
              <td><%= order_product.subtotal.to_i.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
