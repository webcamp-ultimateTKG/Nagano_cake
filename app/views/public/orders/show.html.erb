<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4><span class="title">注文履歴詳細</span></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 ml-3 mt-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 mt-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.charge %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order_products.each do |order_product| %>
            <tr>
              <td><%= order_product.name %></td>
              <td><%= order_product.tax_in_price %></td>
              <td><%= order_product.quantity %></td>
              <td><%= order_product.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
