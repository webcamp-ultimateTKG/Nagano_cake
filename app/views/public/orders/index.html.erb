<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 ml-5 mt-5">
      <h4 class="col-4"><span class="title">注文履歴一覧</span></h4>
    </div>
  </div>
  <div class="row">
    <div class='col-md-12 mt-5 mx-auto'>
      <% if @orders.present? %>
        <section class="orders-index mt-3">
          <table class="table my-table">
            <thead class="table-back" style="height: 50px;">
              <th style="width: 110px;">注文日</th>
              <th style="width: 500px;">配送先</th>
              <th style="width: 150px;">注文商品</th>
              <th style="width: 110px;">支払金額</th>
              <th style="width: 130px;">ステータス</th>
              <th style="width: 120px;">注文詳細</th>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr style="height: 80px;">
                  <td class="align-middle"><%= order.created_at.to_s(:date_jp) %></td>
                  <td class="align-middle">
                    〒<%= order.post_code.to_s.insert(3, "-") %></br>
                    <%= order.address %></br>
                    <%= order.owner %>
                  </td>
                  <td class="align-middle">
                    <% order.order_products.each do |order_product| %>
                      <%= order_product.product.name %></br>
                    <% end %>
                  </td>
                  <td class="align-middle"><%= order.charge.to_s(:delimited) %>円</td>
                  <td class="align-middle"><%= order.status_i18n %></td>
                  <td class="align-middle"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </section>
      <% else %>
        <p>お客様の注文履歴はありません。</p>
      <% end %>
    </div>
  </div>
</div>