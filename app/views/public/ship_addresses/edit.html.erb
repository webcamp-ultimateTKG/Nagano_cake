<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 ml-5 mt-5">
      <h4 class="col-lg-4 col-md-6 col-sm-10"><span class="title">配送先編集</span></h4>
    </div>
  </div>
  <div class="row">
    <div class='col-md-12 ml-5 mt-3'>
      <%= form_with model: @ship_address, local: true do |f| %>

        <div class="form-group row mt-3">
          <%= f.label :post_code, "郵便番号(ハイフンなし)", class: "col-md-2 col-form-label" %>
          <%= f.text_field :post_code, class: "col-md-3 form-control mt-1" %>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :post_code, "住所", class: "col-md-2 col-form-label" %>
          <%= f.text_field :address, class: "col-md-6 form-control mt-1" %>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :post_code, "宛名", class: "col-md-2 col-form-label" %>
          <%= f.text_field :owner , class: "col-md-3 form-control mt-1" %>
          <%= f.submit "変更内容を保存", class: "btn btn-action col-md-2 offset-md-3 mt-1 mb-1" %>
        </div>

      <% end %>
    </div>
  </div>
</div>