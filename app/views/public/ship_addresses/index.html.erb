<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 ml-5 mt-5">
      <h4 class="col-5"><span class="title">配送先登録/一覧</span></h4>
    </div>
  </div>
  <%= render 'layouts/errors', obj: @ship_address %>
  <div class="row mb-5">
    <div class='col-md-12 ml-5 mt-3'>
      <%= form_with model: @ship_address, local: true do |f| %>

        <div class="form-group row mt-3">
          <%= f.label :post_code, "郵便番号(ハイフンなし)", class: "col-md-2 col-form-label" %>
          <%= f.text_field :post_code, :placeholder =>"0000000", class: "col-md-3 form-control mt-1" %>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :post_code, "住所", class: "col-md-2 col-form-label" %>
          <%= f.text_field :address, :placeholder =>"東京都渋谷区代々木神園町0-0", class: "col-md-6 form-control mt-1" %>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :post_code, "宛名", class: "col-md-2 col-form-label" %>
          <%= f.text_field :owner, :placeholder =>"令和道子", class: "col-md-3 form-control mt-1" %>
          <%= f.submit "新規登録", class: "btn btn-success col-md-2 offset-md-3 mt-1 mb-1" %>
        </div>

      <% end %>
    </div>
  </div>
  <div class="row　mt-5">
    <div class="col-md-9 ml-5">
      <% if @ship_addresses.present? %>
        <table class="table table-bordered ship_address_table">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @ship_addresses.each do |ship_address| %>
              <tr>
                <td>〒<%= ship_address.post_code.insert(3, "-") %></td>
                <td><%= ship_address.address.truncate(20) %></td>
                <td><%= ship_address.owner %></td>
                <td class="text-center">
                  <%= link_to "編集する", edit_ship_address_path(ship_address), class: "btn btn-success flex-row mr-3" %>
                  <%= link_to "削除する", ship_address_path(ship_address), method: :delete, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>配送先は登録されていません。</p>
      <% end %>
    </div>
  </div>
</div>