<div class="container my-5">
 <div class="row">
    <div class="col-3">
      <%= render 'public/products/genre', genres: @genres %>
    </div>
    <div class="col-9">
	    <div class="row">
	    	<% @products.each do |product| %>
          <div class="col-3 mt-3 mx-3 text-center">
              <div class="card">
		        <%= link_to product_path(product) do %>
		          <%= attachment_image_tag product, :image, size: "180x150", format: 'jpeg', fallback: "no_image.jpg", class: 'card-img-top' %>
		        <% end %>
		        <div class="cars-body">
                <strong><%= product.name %></strong><br>
		        <span><%= product.genre.name %></span><br>
		        <span class="ml-auto"><%= product.add_tax_price.to_s(:delimited) %>å††</span><br>
		       </div>
		      </div>
          </div>
        <% end %>
	    </div>
   </div>
  </div>
 <div class="container">
	<div class="row">
	 <div class="col-md-4 offset-md-4 py-2 mt-5">
	 	<%= paginate @products %>
	 </div>
	</div>
 </div>
 </div>