<div class="container">
  <div class="row">
    <div class="col-md-3 mt-4">
      <%= render 'public/products/genre', genres: @genres %>
    </div>
    <div class="col-9 d-flex flex-wrap mt-4 h-100">
    	<% @products.each do |product| %>
        <div class="card ml-3 mb-5" style="width: 11rem; height:350px">
          <%= link_to product_path(product) do %>
          <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image.jpg", class: 'card-img-top bd-placeholder-img' %>
      <% end %>
          <div class="card-body">
            <h6 class="card-title border-bottom" id="card_title"><strong><%= product.name %></strong></h6>
            <% if product.is_active ==  false %>
              <p><%= product.add_tax_price.to_s(:delimited) %>円<span class="text-danger">　販売停止</span></p>
            <% else %>
              <p class="text-right card-text"><%= product.add_tax_price.to_s(:delimited) %>円</p>
              <p class="badge badge-primary genre_badge"><%= product.genre.name %></p>
            <% end %>
         </div>
        </div>
      <% end %>
    </div>
  </div>
	<div class="row">
    <div class="col-md-12 pagenation">
     <%= paginate @products %>
    </div>
	</div>
</div>