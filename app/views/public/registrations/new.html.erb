<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <!--名前-->
  <div class="field">
    <%= f.label "名前" %>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true, :placeholder => "令和" %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autofocus: true, :placeholder => "道子" %>
  </div>

  <!--フリガナ-->
  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "レイワ" %>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "ミチコ" %>
  </div>

  <!--メールアドレス-->
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %>
  </div>

  <!--郵便番号-->
  <div class="field">
    <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code, autofocus: true, :placeholder => "0000000" %>
  </div>

  <!--住所-->
  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0" %>
  </div>

  <!--電話番号-->
  <div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number, autofocus: true,  :placeholder => "0000000000" %>
  </div>

  <!--パスワード-->
  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= render "public/shared/links" %>