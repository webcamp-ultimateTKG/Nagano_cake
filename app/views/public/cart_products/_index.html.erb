<% if cart_products.present? %>
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="col-md-6"><span class="title">ショッピングカート</span></h4>
    </div>
    <div class="col-md-2 offset-md-2 mt-5">
      <%= link_to "カートを空にする", destroy_all_cart_products_path, method: :delete, remote: true, class: "btn btn-danger", data: {confirm: 'カートを空にしてもよろしいですか'} %>
    </div>
  </div>
  <div class="row">
    <div class='mx-auto col-md-12 mt-3'>
      <table class="table table-bordered cart_table">
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <tbody>
          <% cart_products.each do |cart_product| %>
            <tr>
              <td><%= attachment_image_tag cart_product.product, :image, fallback: "no_image.jpg", class: "small_wide_image_size" %><span class="product_name"><%= cart_product.product.name.truncate(15) %></span></td>
              <td><%= cart_product.product.add_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model: cart_product, remote: true do |f| %>
                  <%= f.hidden_field :product_id, value: cart_product.product.id %>
                <div class="selectdiv" id="cart_selectdiv">
                  <%= f.select :quantity, *[1..10], selected: cart_product.quantity %>
                </div>
                  <%= f.submit "変更", class: "btn btn-success btn-change" %>
                <% end %>
              </td>
              <td><%= cart_product.subtotal.to_i.to_s(:delimited) %></td>
              <td id="cart-#{cart_product.id}">
                <%= link_to "削除する", cart_product_path(cart_product), method: :delete, remote: true, class: "btn btn-danger ml-4", data: {confirm: '削除してもよろしいですか'} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class='col-md-3 offset-md-1 mt-3'>
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary"%>
    </div>
    <div class='col-md-4 offset-md-4 mt-3'>
      <table class="table table-bordered cart_total_table">
        <tr>
          <th>合計金額</th>
          <td><%= total.round.to_s(:delimited)%></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class='col-md-3 mx-auto mt-5'>
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success btn-lg d-block"%>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="col-md-6"><span class="title">ショッピングカート</span></h4>
    </div>
  </div>
  <div class="row">
    <div class='col-md-10 offset-md-1 nothing_msg'>
      <h5 class="text-center">ショッピングカートに商品が登録されていません。</h5>
      <p class="text-center">「買い物を続ける」ボタンから、</br>商品を選択して、カートに追加してください。</p>
    </div>
  </div>
  <div class="row">
    <div class='col-md-3 mx-auto'>
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary btn-lg d-block"%>
    </div>
  </div>
<% end %>
