<div class="container">
  <div class="row">
    <h4 class="title">管理者用ログイン</h4>
  </div>
  <div class="row">
    <div class='mx-auto col-md-9 mt-5'>
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="field mb-3">
          <%= f.label :email, "メールアドレス", class: "col-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@examle.com", size: "60x20" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード", class: "col-3" %>
          <%= f.password_field :password, autocomplete: "current-password", size: "60x20" %>
        </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="mx-auto" style="width: 200px;">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary px-3 pl-4 pr-4" %>
      </div>
      <% end %>
    </div>
  </div>
</div>






