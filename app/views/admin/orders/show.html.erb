<div class="container">
  <div class="row">
    <h4 class="title">注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-md-7 mt-3">
      <table class="table table-borderless order-show">
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.full_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.to_s(:datetime_jp) %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.post_code.to_s.insert(3, "-") %> <%= @order.address %></br>
            <%= @order.owner %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="align-middle">注文ステータス</th>
          <td>
            <%= form_with model: @order, url: admin_order_path(@order), local: true do |f| %>
              <%= f.select :status, Order.statuses_i18n.invert %>
              <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>
      <div class="mt-3">
        <table class="table table-bordered align-bottom order-products">
          <thead class="table-secondary">
            <tr>
              <th>商品名</th>
              <th class="text-center align-middle">単価（税込）</th>
              <th class="text-center align-middle">数量</th>
              <th class="text-center align-middle">小計</th>
              <th class="text-center align-middle">製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order_products.each do |order_product| %>
              <tr>
                <td class="align-middle"><%= order_product.product.name %></td>
                <td class="text-center align-middle"><%= order_product.tax_in_price.to_i.to_s(:delimited) %></td>
                <td class="text-center align-middle"><%= order_product.quantity %></td>
                <td class="text-center align-middle"><%= order_product.subtotal.to_s(:delimited) %></td>
                <td class="text-center align-middle">
                  <%= form_with model: order_product, url: admin_order_product_path(order_product), local: true do |f| %>
                    <%= f.select :making_status, OrderProduct.making_statuses_i18n.invert %>
                    <%= f.submit "更新", class: "btn btn-success" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-md-3 mt-3">
      <table class="table table-borderless order-total">
        <tr>
          <th>商品合計</th>
          <td class="text-right"><%= @total.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td class="text-right"><%= @order.shipping_fee %>円</td>
        </tr>
        <tr>
          <th class="charge">請求額合計</th>
          <td class="text-right font-weight-bold charge"><%= @order.charge %>円</td>
        </tr>
      </table>
    </div>
    </div>
  </div>
</div>

