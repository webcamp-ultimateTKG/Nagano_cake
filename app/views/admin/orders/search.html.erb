<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4><span class="title"><%= @customer.full_name %>さんの注文履歴</span></h4>
    </div>
  </div>
  <div class="row">
    <div class='mx-auto col-md-12 mt-3'>
      <table class="table">
        <thead>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="borderd"><%= link_to order.created_at.to_s(:datetime_jp), admin_order_path(order), class: "link_text link_border" %></td>
              <td><%= order.total_quantity %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>