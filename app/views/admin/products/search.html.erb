<div class="container">
  <div class="row">
    <div class="col-5 mt-5">
      <h4 class="bg-secondary col-4 text-light text-center">検索結果</h4>
    </div>
    <div class="col-6 mt-5">
      <h2 class="float-right">
          <%= link_to "",  new_admin_product_path, class: "fas fa-plus text-light btn btn-primary rounded-circle pt-3", style: "width:50px;height:50px;" %>
      </h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-10 col-md-offset-1 mx-auto">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品ID</th>
            <th style="width: 300px;">商品名</th>
            <th>税抜き価格</th>
            <th style="width: 300px;">ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td style="width: 300px;"><%= link_to product.name, admin_product_path(product)%></td>
              <td><%= product.price %></td>
              <td style="width: 300px;"><%= product.genre.name %></td>
              <% if product.is_active == true %>
                <td class="text-success">販売中</td>
              <% else %>
                <td class="text-danger">販売停止中</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @products %>
    </div>
  </div>
</div>

